<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/blue_header_bg"

        android:layout_height="200dp">
        <LinearLayout
            android:id="@+id/login_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_centerInParent="true"
            >

            <com.bafangcha.app.widget.CircleImageView
                android:id="@+id/head_icon_iv"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@mipmap/mark_07"
            />
            <TextView
                android:id="@+id/username_tv"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size_16"
                android:text="点击登陆"
                />

        </LinearLayout>

    </RelativeLayout>
    <View
        style="@style/vertical_space_style" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/layout_query"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingLeft="40dp"
            android:paddingRight="20dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_666"
                android:textSize="@dimen/font_size_16"
                android:text="企业查询"
                android:layout_centerVertical="true"
                android:drawableLeft="@mipmap/icon_search"
                android:gravity="center_vertical"
                android:drawablePadding="20dp"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/usercenter_arrow_right"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                />
            <View
                android:layout_alignParentBottom="true"
                style="@style/MyHorizontalDividerLine"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/layout_share"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingLeft="40dp"
            android:paddingRight="20dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_666"
                android:textSize="@dimen/font_size_16"
                android:text="APP分享"
                android:layout_centerVertical="true"
                android:drawableLeft="@mipmap/icon_search"
                android:gravity="center_vertical"
                android:drawablePadding="20dp"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/usercenter_arrow_right"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                />
            <View
                android:layout_alignParentBottom="true"
                style="@style/MyHorizontalDividerLine"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/layout_comment"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingLeft="40dp"
            android:paddingRight="20dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_666"
                android:textSize="@dimen/font_size_16"
                android:text="给个好评"
                android:layout_centerVertical="true"
                android:drawableLeft="@mipmap/icon_search"
                android:gravity="center_vertical"
                android:drawablePadding="20dp"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/usercenter_arrow_right"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                />
            <View
                android:layout_alignParentBottom="true"
                style="@style/MyHorizontalDividerLine"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/layout_set"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingLeft="40dp"
            android:paddingRight="20dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_666"
                android:textSize="@dimen/font_size_16"
                android:text="设置"
                android:layout_centerVertical="true"
                android:drawableLeft="@mipmap/icon_search"
                android:gravity="center_vertical"
                android:drawablePadding="20dp"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/usercenter_arrow_right"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                />
            <View
                android:layout_alignParentBottom="true"
                style="@style/MyHorizontalDividerLine"
                />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>