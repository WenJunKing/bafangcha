<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:paddingBottom="12dp"
    android:background="@color/blue_base_bg"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.bafangcha.app.widget.CircleImageView
        android:id="@+id/ent_logo_iv"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginRight="12dp"
        android:src="@mipmap/mark_07"
        app:border_width="1dp"
        app:border_color="@color/white"
        />
    <TextView
        android:textSize="@dimen/font_size_20"
        android:textColor="@color/white"
        android:id="@+id/ent_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/ent_logo_iv" />

    <TextView
        android:textSize="@dimen/font_size_14"
        android:textColor="@color/white"
        android:ellipsize="end"
        android:id="@+id/ent_type_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:layout_alignBaseline="@+id/ent_status_tv"
        android:layout_toRightOf="@id/ent_logo_iv"
        android:layout_below="@id/ent_name_tv" />

    <TextView
        android:textSize="@dimen/font_size_12"
        android:textColor="@color/white"
        android:id="@+id/ent_status_tv"
        android:background="@drawable/bg_oval_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="6dp"
        android:layout_toRightOf="@id/ent_type_tv"
        android:layout_below="@id/ent_name_tv" />
    <TextView
        android:textSize="@dimen/font_size_12"
        android:textColor="@color/text_999"
        android:gravity="center_vertical"
        android:id="@+id/ent_update_time_tv"
        android:paddingRight="4dp"
        android:drawableLeft="@mipmap/icon_entindex_refresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="5.0dip"
        android:layout_alignBottom="@id/ent_logo_iv"
        android:layout_alignLeft="@id/ent_type_tv"
        />
    <TextView
        android:textSize="@dimen/font_size_12"
        android:textColor="@color/text_999"
        android:layout_gravity="right|center"
        android:id="@+id/ent_look_count_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp"
        android:drawableLeft="@mipmap/icon_entindex_scaned"
        android:drawablePadding="4dp"
        android:layout_alignParentRight="true"
        android:layout_alignBaseline="@id/ent_update_time_tv"
        />
</RelativeLayout>