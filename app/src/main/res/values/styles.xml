<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar" >
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="vertical_space_style">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">10dp</item>
        <item name="android:background">@color/space_color</item>
    </style>

    <!--横向分割线-->
    <style name="MyHorizontalDividerLine">
        <item name="android:background">@color/space_color</item>
        <item name="android:layout_height">1px</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    
    <!--白底矩形Edit-->
    <style name="rect_edittext_style">
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/text_666</item>
        <item name="android:textColorHint">@color/text_999</item>
        <item name="android:textSize">@dimen/font_size_16</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!--提交按钮-->
    <style name="submit_btn_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_marginRight">30dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/font_size_20</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/blue_base_bg</item>
    </style>
    <style name="MyDialog" parent="@android:Theme.Dialog">
        <!-- 是否有边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- 是否为全屏 -->
        <item name="android:windowFullscreen">false</item>

        <item name="android:windowNoTitle">true</item>
        <!-- 对话框是否透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 是否浮在下层窗体之上-->
        <item name="android:windowIsFloating">true</item>
        <!-- 背景 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 是否显示壁纸 -->
        <item name="android:windowShowWallpaper">false</item>
        <!-- 设置窗体内容背景 -->
        <item name="android:windowContentOverlay">@null</item>
        <!-- 是否允许背景灰暗 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!--  是否再点击外部可关闭 -->
        <item name="android:windowCloseOnTouchOutside">true</item>
        <!-- 设置动画，注意是style -->
        <item name="android:windowAnimationStyle">@style/dialogAnim</item>
    </style>
    <!-- 对话框动画-->
    <style name="dialogAnim" parent="android:Animation">
        <item name="@android:windowEnterAnimation">@anim/dialog_enter</item>  //进入时的动画
        <item name="@android:windowExitAnimation">@anim/dialog_exit</item>    //退出时的动画
    </style>
    <style name="TagGroup">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="atg_isAppendMode">false</item>
        <item name="atg_borderColor">@color/space_color</item>
        <item name="atg_textColor">@color/blue_base_bg</item>
        <item name="atg_backgroundColor">#FFFFFF</item>
        <item name="atg_dashBorderColor">#AAAAAA</item>
        <item name="atg_inputHintColor">#80000000</item>
        <item name="atg_inputTextColor">#DE000000</item>
        <item name="atg_checkedBorderColor">@color/space_color</item>
        <item name="atg_checkedTextColor">#FFFFFF</item>
        <item name="atg_checkedMarkerColor">#FFFFFF</item>
        <item name="atg_checkedBackgroundColor">@color/space_color</item>
        <item name="atg_pressedBackgroundColor">#EDEDED</item>
        <item name="atg_borderStrokeWidth">0.5dp</item>
        <item name="atg_textSize">@dimen/font_size_14</item>
        <item name="atg_horizontalSpacing">8dp</item>
        <item name="atg_verticalSpacing">4dp</item>
        <item name="atg_horizontalPadding">12dp</item>
        <item name="atg_verticalPadding">6dp</item>
    </style>


</resources>
